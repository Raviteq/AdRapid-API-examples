/*
 * temp fixes
 */
#app > div
  flex-grow 1
  
  
form#form 
  > div
    padding 1em 0 0 1em

  button
    margin 1em
    
  input, select
    width 90%
  
  #description
    padding 0 1em

.loader, #spinner
  display none

.res
  position relative

#results .loader
  position absolute
  right 20px
  bottom 20px
  
#the_form
  padding 0 !important

#app, #results
  background #0a0a0a
  background -webkit-linear-gradient(-45deg, #0a0a0a 0%,#2b2b2b 100%)
  background linear-gradient(135deg, #0a0a0a 0%,#2b2b2b 100%)
  background-size cover
  background-position fixed

#form, #templates
  background #f9f9f9

.template img
  border 1px solid #ccc



// fixxx
#form
  flex-basis 20%
  
.box 
  flex-basis 100%
  min-height 100px


#results
  flex-wrap wrap

.res
  border 1px solid #292929 !important
  width 100%
  flex-basis 100%

#form h3, #form p 
  color #333

#form p
  margin-bottom 1.2em

.borderBottom
  border-bottom 1px solid borderColor

.bordered
  border 1px solid lighten(backgroundColor, 20%)
  
  h3 
    padding .5em 1em 0 1em

#crop_form
  padding 0 1em 0 0



#init-crop
  // background-image url('/assets/images/crop.png')
  // background-size cover
  width 68px
  height 68px
  padding 0
  margin 50px 0 0 0
  // background-color #000 !important;
  border 1px solid red
  color #fff
  cursor pointer
  transition all 300ms

  &:hover
    background #eee


.flex
  display flex
  height 100%
  width 100%

  .box
    border 1px solid purple !important
    max-width 600px
    max-height 600px
    // valign()

    img
      width 100%
      max-width 600px
      height auto
      max-height 600px