/*
 * fixes
 */
#app > div
  flex-grow 1
  
form#form 
  > div
    padding 1em 0 0 1em

  button
    margin 1em
    
  input, select
    width 90%
  
  #description
    padding 0 1em

.loader, #spinner
  display none

.res
  position relative

#results .loader
  position absolute
  right 20px
  bottom 20px
  
#the_form
  padding 0 !important

#app, #results
  background #0a0a0a
  background -webkit-linear-gradient(-45deg, #0a0a0a 0%,#2b2b2b 100%)
  background linear-gradient(135deg, #0a0a0a 0%,#2b2b2b 100%)
  background-size cover
  background-position fixed

#form, #templates
  background #f9f9f9

.template img
  border 1px solid #ccc

#form
  flex-basis 20%
  
#results
  flex-wrap wrap

.res
  border 1px solid #292929 !important
  width 100%
  flex-basis 100%

// #form h3, #form p
//   color #333

#form p
  margin-bottom 1.2em

.borderBottom
  border-bottom 1px solid borderColor

.bordered
  border 1px red !important
  
  h3 
    padding .5em 1em 0 1em


#init-crop
  width 68px
  height 68px
  padding 0
  margin 50px 0 0 0
  border 1px solid red
  color #fff
  cursor pointer
  transition all 300ms

  &:hover
    background #eee


.flex
  display flex
  height 100%
  width 100%

  .box
    // border 1px solid purple !important // do the border!
    max-width 600px
    max-height 600px
    valign()
    margin 1em

    img
      // width 100%
      max-width 100%
      // max-height 100%
      // width auto !important
      height auto !important
      
.full
  width 100%
  clear both

#upload
  float right

#crop-button
  position fixed
  bottom 20px
  right 120px

.hidden
  display none !important;


#boxes .box select
  width 111%
  

pre, .break
  word-wrap break-word !important
  max-width 500px
  

.fatter
  flex-grow 2

.smaller 
  flex-shrink 2

.left
  float left
  width auto !important

.center
  margin 0px auto

.box
  display flex

.flex-center
  align-self center
  margin 0px auto
  border 1px solid red !important

  input
    width 100% !important
    max-width 90% !important


.bottomspace
  margin-bottom 2em


  box img 
    border 1px solid #ccc !important
    min-width 100% !important
    min-height 150px
    
.hide
  display none

.hero
  padding 2em


#form_content > div,
// #form_content div,
// #the_form div,
// .minicolors-position-bottom,
// .minicolors-position-left,
// .minicolors-focus,
.text-fields
.field, #form input,
label,
input
  width 100% !important


// colorpicker fixes
.minicolors,
.minicolors-theme-default
  width 95% !important

.minicolors-swatch
  display none !important

h2 > a 
  color #6abedb !important


// index page elements
.wrapper
  display flex
  align-items center
  justify-content center

.demoWrapper
  margin 0 -1.1em -1.1em -1.1em !important // bit of a hack
  display flex
  flex-wrap wrap

.demo
  backround transparent
  padding 1em
  border 1px solid #d0d0d0
  flex 1 1 auto
  flex-basis 30%


#description
  overflow visible !important



// debug box  
#debug
  width 75%
  height 200px
  position fixed
  top 0px
  right 0px
  border 1px solid red
  background #f9f9f9
  padding .6em
  margin .6em



.calc
  position relative
  right 0px
  top -40px
  float right
  max-width 40px
  text-align right
  padding-right .6em
  font-size 72%
