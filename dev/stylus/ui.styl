/*
 * UI states
 */
.active
	opacity 0.4


/*
 * spinners
 */
#spinner
	display flex
	align-items center
	justify-content center
	// transition all 350ms

	// top right corner, inside main app container
	position absolute
	top 7em
	right 7em

	// bottom-right corner
	// position fixed
	// bottom 40px
	// right 40px

.throbber
	z-index 500

.throbber:after
	display block
	position relative
	width 50px
	height 50px
	animation rotate 0.6s linear infinite
	border-radius 100%
	border-top 2px solid #545a6a
	border-bottom 2px solid #d4d4db
	border-left 2px solid #545a6a
	border-right 2px solid #d4d4db
	content ''
	opacity .92

@keyframes rotate
	0% { transform: rotateZ(-360deg) }
	100% { transform: rotateZ(0deg) }
	
	