/* 
 * reset
 */
html, body, div, h1, h2, h3, h4, h5, p, a, form, input, label, iframe
	margin 0
	padding 0
	border 0
	outline 0
	font-size 100%
	vertical-align baseline
	background transparent
	
body
	font 100%/1.5 helvetica, arial, sans-serif;
	color textColor
	line-height 1
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased

img 
	width 100%
	height auto
	padding 0

a
	text-decoration none
	vertical-align baseline


/*
 * helper classes
 */
.centered
	position absolute;
	top 0px
	left 0px
	bottom 0px
	right 0px
	
.hidden,
::-webkit-scrollbar 
	display none !important